{
   "compilerOptions": {
      "target": "ES2015", // 대부분 브라우저 에서 호환
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "lib": ["ESNext", "DOM"],
      "strict": true,
      "typeRoots": [
         "node_modules/@types"
      ]
   },
   "include": [
      "src/**/*.ts",
      "api/**/*.ts"
   ],
   "exclude": [
      "node_modules",
      "dist",
      "assets"
   ]
}
